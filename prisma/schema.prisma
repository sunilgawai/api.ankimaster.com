datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id       Int    @id @default(autoincrement())
    email    String @unique
    password String
}

model Col {
    id     Int    @id
    crt    Int
    mod    Int
    scm    Int
    ver    Int
    dty    Int
    usn    Int
    ls     Int
    conf   String
    models String
    decks  String
    dconf  String
    tags   String
}

model Notes {
    id    Int    @id
    guid  String
    mid   Int
    mod   Int
    usn   Int
    tags  String
    flds  String
    sfld  Int
    csum  Int
    flags Int
    data  String
}

model Cards {
    id     Int    @id
    nid    Int
    did    Int
    ord    Int
    mod    Int
    usn    Int
    type   Int
    queue  Int
    due    Int
    ivl    Int
    factor Int
    reps   Int
    lapses Int
    left   Int
    odue   Int
    odid   Int
    flags  Int
    data   String
}

model Revlog {
    id      Int @id
    cid     Int
    usn     Int
    ease    Int
    ivl     Int
    lastIvl Int
    factor  Int
    time    Int
    type    Int
}

model Graves {
    id   Int @id
    usn  Int
    oid  Int
    type Int
}
