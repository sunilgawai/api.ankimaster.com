model Cards {
    id     BigInt @id
    nid    BigInt
    did    BigInt
    ord    BigInt
    mod    BigInt
    usn    BigInt
    type   BigInt
    queue  BigInt
    due    BigInt
    ivl    BigInt
    factor BigInt
    reps   BigInt
    lapses BigInt
    left   BigInt
    odue   BigInt
    odid   BigInt
    flags  BigInt
    data   String
}

model Revlog {
    id      BigInt @id
    cid     BigInt
    usn     BigInt
    ease    BigInt
    ivl     BigInt
    lastIvl BigInt
    factor  BigInt
    time    BigInt
    type    BigInt
}

model Graves {
    id   BigInt @id
    usn  BigInt
    oid  BigInt
    type BigInt
}
