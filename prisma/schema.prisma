datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id       Int    @id @default(autoincrement())
    email    String @unique
    password String
}

model Col {
    id     BigInt @id
    crt    BigInt
    mod    BigInt
    scm    BigInt
    ver    BigInt
    dty    BigInt
    usn    BigInt
    ls     BigInt
    conf   String
    models String
    decks  String
    dconf  String
    tags   String
}

model Notes {
    id    BigInt    @id
    guid  String
    mid   BigInt
    mod   BigInt
    usn   BigInt
    tags  String
    flds  String
    sfld  String
    csum  BigInt
    flags Int
    data  String
}

